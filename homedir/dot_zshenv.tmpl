export EDITOR="code -w"
export HOMEBREW_NO_AUTO_UPDATE=1
export DISABLE_AUTO_UPDATE="true"
export HOMEBREW_NO_ENV_HINTS=1
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
{{ if eq .chezmoi.os "darwin" }}
export QUOTIO_PROXY_HOST=http://127.0.0.1:8317
{{- else if eq .chezmoi.os "linux" }}
export QUOTIO_PROXY_HOST=http://host.docker.internal:8317

if [[ -z $DOCKER_SOCK_OWNED && -f /.dockerenv && -S /var/run/docker.sock ]]; then
    sudo chown "$(whoami):$(whoami)" /var/run/docker.sock 2>/dev/null || true
    export DOCKER_SOCK_OWNED=1   # prevent repeating in subshells
fi
{{- end }}
export QUOTIO_PROXY_URL=$QUOTIO_PROXY_HOST/v1
export AICOMMIT_CONFIG_PATH=$HOME/.config/aicommit2/config.ini
